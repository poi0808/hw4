<h1 style="font-weight: bold; font-size: 30px"">Places</h1>

<div class="row">
  <div class="col-md-4">
    <div class="card-body mt-2 mb-4">
      <h2><a href="/places/new" class="btn btn-primary" style="font-weight: bold; font-size: 24px">New Place</a></h2>
    </div>
  </div>
</div>


<ul>
  <% for place in @places %>
    <li><a href="/places/<%= place["id"] %>" style="color: blue; text-decoration: underline; font-size: 18px; font-weight: bold"><%= place["name"] %></a></li>
  <% end %>
</ul>
